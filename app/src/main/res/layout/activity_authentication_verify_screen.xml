<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_side.activities.AUTHENTICATION_LOGIN">





    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">





        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="100dp"
                android:alpha="0.8"
                android:layout_gravity="center"
                android:background="@drawable/ion3"
                android:layout_marginBottom="3dp"
                android:layout_height="100dp"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content"
                android:textColor="#707070"
                android:layout_marginTop="60dp"
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                app:layout_constraintRight_toRightOf="parent"
                android:textColorHint="#707070"
                android:textSize="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_gravity="left"
                android:hint="Email Address"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/mainimages"
                android:textColor="#707070"
                android:id="@+id/password"
                android:inputType="textPassword"
                app:layout_constraintRight_toRightOf="parent"
                android:textColorHint="#707070"
                android:textSize="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_gravity="left"
                android:hint="Password"
                />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/usernumber"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:background="#2196F3"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/login"
                    android:textColor="#ffffff"
                    android:text="Login"/>

            </androidx.cardview.widget.CardView>



            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#222222"
                    android:layout_gravity="center"
                    android:text="Don't have an account?."/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/signup"
                    android:gravity="center"
                    android:textColor="#2194F1"
                    android:layout_gravity="center"
                    android:text=" Sign up"/>

            </androidx.appcompat.widget.LinearLayoutCompat>



        </androidx.appcompat.widget.LinearLayoutCompat>






















    </androidx.constraintlayout.widget.ConstraintLayout>







    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/loadingScreen"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:alpha="0.5"/>

        <ProgressBar
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:text="Casatopia"
        android:textColor="#B1B1B1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />







    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/verifyScreen"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:alpha="0.5"/>

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           app:cardCornerRadius="10dp"
           android:layout_marginTop="100dp"
           android:layout_marginBottom="100dp"
           android:layout_marginRight="30dp"
           android:layout_marginLeft="30dp"
           android:layout_height="match_parent">

           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <androidx.appcompat.widget.LinearLayoutCompat
                   android:layout_width="match_parent"
                   android:gravity="center"
                   android:orientation="vertical"
                   android:layout_height="match_parent">

                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_width="wrap_content"
                       android:gravity="center"
                       android:layout_marginTop="30dp"
                       android:layout_marginLeft="20dp"
                       android:textColor="#444444"
                       android:textSize="19dp"
                       android:layout_marginBottom="10dp"
                       android:textStyle="bold"
                       android:layout_marginRight="20dp"
                       android:text="Verify Account"
                       android:layout_height="wrap_content"/>




                   <androidx.appcompat.widget.AppCompatImageView
                       android:layout_width="100dp"
                       android:alpha="0.9"
                       android:src="@drawable/baseline_email_24"
                       android:layout_height="100dp"/>

                   <androidx.appcompat.widget.AppCompatTextView
                       android:layout_width="wrap_content"
                       android:gravity="center"
                       android:layout_marginTop="15dp"
                       android:layout_marginLeft="20dp"
                       android:textColor="#222222"
                       android:textSize="18dp"
                       android:layout_marginRight="20dp"
                       android:text="Check your email to verify your account"
                       android:layout_height="wrap_content"/>


                   <androidx.cardview.widget.CardView
                       android:layout_width="wrap_content"
                       app:cardCornerRadius="7dp"
                       android:layout_marginTop="30dp"
                       app:cardElevation="-1dp"
                       app:cardBackgroundColor="#00000000"
                       android:layout_height="wrap_content">

                       <TextView
                           android:layout_width="wrap_content"
                           android:text="Ok"
                           android:id="@+id/ok"
                           android:layout_margin="0dp"
                           android:textSize="20dp"
                           android:textColor="#00bbff"
                           android:layout_height="wrap_content"/>

                   </androidx.cardview.widget.CardView>

               </androidx.appcompat.widget.LinearLayoutCompat>


           </androidx.constraintlayout.widget.ConstraintLayout>


       </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>