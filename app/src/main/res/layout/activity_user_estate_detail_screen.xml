<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_side.activities.UserEstateDetail">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="100dp"
                android:id="@+id/estateImage"
                android:background="#c6c6c6"
                android:layout_height="100dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="200dp"
                android:id="@+id/estateName"
                android:text="Estate Name"
                android:layout_height="70dp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="200dp"
                android:id="@+id/country"
                android:text="Country"
                android:layout_height="70dp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="200dp"
                android:id="@+id/state"
                android:text="state"
                android:layout_height="70dp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="200dp"
                android:id="@+id/estatePrice"
                android:text="Property price"
                android:layout_height="70dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchase this property"
                android:id="@+id/makePayment"/>



            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View admin profile"
                android:id="@+id/viewAdminProfile"/>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View full map"
                android:id="@+id/viewFullMap"/>




        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>