<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_side.activities.AUTHENTICATION_ACCOUNT_TYPE_SCREEN">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:layout_height="match_parent">





        <TextView
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/linear"
            android:layout_marginBottom="50dp"
            android:textSize="16dp"
            android:textColor="#000000"
            android:text="Select The Account You want to Create"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/linear"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#1E88E5"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <TextView
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="match_parent"
                        android:id="@+id/user"
                        android:text="I need medical services"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="100dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="-20dp"
                        android:layout_height="match_parent"
                        />

                    <TextView
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_width="30dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text=">"
                        android:layout_height="match_parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="10dp"
                app:cardBackgroundColor="#1E88E5"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <TextView
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="match_parent"

                        android:paddingLeft="30dp"
                        android:text="I provide medical services"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="100dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="-20dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_width="30dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text=">"
                        android:layout_height="match_parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="50dp"
                android:visibility="gone"
                android:background="#c6c6c6"/>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardElevation="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="30dp"
                android:visibility="gone"
                android:layout_height="wrap_content">


                <TextView
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_width="300dp"
                    android:id="@+id/medicalpersonnel"
                    android:text="Medical Personnel: I want to offer medical services"
                    android:layout_height="60dp"/>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:elevation="5dp"
                app:cardElevation="5dp"

                app:cardCornerRadius="30dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">


                <TextView
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_width="300dp"
                    android:id="@+id/ambulanceservices"
                    android:text="Ambulance Services"
                    android:layout_height="60dp"/>

            </androidx.cardview.widget.CardView>






            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:elevation="5dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_height="wrap_content">


                <TextView
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_width="300dp"
                    android:id="@+id/medicalorganisation"
                    android:text="Medical Organisation"
                    android:layout_height="60dp"/>

            </androidx.cardview.widget.CardView>





        </LinearLayout>





        <androidx.cardview.widget.CardView

            app:cardElevation="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="#ffffff"
                    android:layout_marginLeft="100dp"
                    android:layout_marginBottom="80dp"
                    android:layout_height="match_parent">



                </androidx.constraintlayout.widget.ConstraintLayout>


                <ImageView
                    android:layout_width="100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="30dp"
                    android:visibility="gone"
                    android:layout_marginTop="160dp"
                    android:layout_height="100dp"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textColor="#333333"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="#ffffff"
                    android:textStyle="bold"
                    android:id="@+id/accounttype"
                    android:textSize="25dp"
                    android:layout_marginTop="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Select Account Type"/>




                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginBottom="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/accounttype"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_height="match_parent">





                    <ScrollView
                        android:layout_width="match_parent"
                        android:scrollbars="none"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_height="wrap_content">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="40dp"
                            android:layout_height="match_parent">


                            <ListView
                                android:divider="#00000000"
                                android:layout_gravity="center"
                                android:scrollbars="none"
                                android:layout_width="match_parent"
                                android:id="@+id/listView1"
                                android:layout_height="600dp"/>



                            <ListView
                                android:divider="#00000000"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                android:scrollbars="none"
                                android:layout_width="match_parent"
                                android:id="@+id/listView2"
                                android:layout_height="800dp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </ScrollView>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="25dp"
                    android:layout_marginTop="190dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="145dp"
                    android:text="User>"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:visibility="gone"
                    android:layout_marginTop="440dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="190dp"
                    android:text="Medical\nService   >\nProvider"/>



                <ImageView
                    android:layout_width="150dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="30dp"
                    android:visibility="gone"
                    android:layout_marginTop="400dp"
                    android:layout_height="150dp"
                    />





            </androidx.constraintlayout.widget.ConstraintLayout>






        </androidx.cardview.widget.CardView>



        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/top"
            android:elevation="20dp"
            android:layout_width="match_parent"
            android:background="#1E88E5"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#ffffff"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="20dp">


                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="#ffffff" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="Who Are You?"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="?actionBarSize"
                    android:padding="10dp"
                    android:text=""
                    android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                    android:textColor="#222222" />


            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#00000000"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="match_parent">


            <ListView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp"
                android:divider="#00000000"
                android:layout_gravity="center"
                android:scrollbars="none"
                app:layout_constraintTop_toBottomOf="@+id/service"
                android:layout_width="match_parent"
                android:layout_marginTop="65dp"
                android:layout_height="wrap_content"/>





        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardElevation="50dp"
            android:layout_margin="50dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="150dp"
                android:background="#F8F8F8"
                android:textColor="#222222"
                android:layout_height="50dp"
                android:visibility="gone"
                android:text="Back"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/goback"/>

        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <ProgressBar
        android:id="@+id/progx"
        style="?android:attr/progressBarStyle"
        android:layout_width="35dp"
        android:layout_gravity="right"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="35dp" />



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#00000000"
        android:layout_marginTop="50dp"
        android:layout_height="match_parent"
        android:gravity="center">



        <androidx.cardview.widget.CardView
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="#00000000"
            app:cardElevation="10dp"
            android:id="@+id/userCard"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="25dp"
            android:layout_width="250dp"
            android:layout_height="200dp">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">





                <ImageView
                    android:layout_width="match_parent"
                    android:background="#F6F6F6"
                    android:layout_height="match_parent"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/user"
                    android:id="@+id/image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="35dp"
                    android:layout_height="100dp"/>



                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:text="User Account"
                    android:gravity="center"
                    android:layout_marginTop="130dp"
                    android:textColor="#444444"
                    android:textSize="20dp"
                    android:layout_height="match_parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_marginLeft="10dp"
            app:cardBackgroundColor="#00000000"
            app:cardElevation="10dp"
            android:id="@+id/adminCard"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="25dp"
            android:layout_width="250dp"
            android:layout_height="200dp">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">





                <ImageView
                    android:layout_width="match_parent"
                    android:background="#F6F6F6"
                    android:layout_height="match_parent"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/house"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="35dp"
                    android:layout_height="100dp"/>



                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:text="Estate Owner Account"
                    android:gravity="center"
                    android:id="@+id/estateOwner"
                    android:layout_marginTop="130dp"
                    android:textColor="#444444"
                    android:textSize="20dp"
                    android:layout_height="match_parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>



    </androidx.appcompat.widget.LinearLayoutCompat>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/loadingScreen"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:alpha="0.5"/>

        <ProgressBar
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>