<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    tools:context="com.tombra.smartpay.ui.LoginScreen">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="515dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="120dp"
                android:src="@drawable/wave"
                android:layout_height="120dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_gravity="center"
                    android:src="@drawable/smartappslogi"
                    android:layout_height="110dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:text="Email,Phone"
                    android:textStyle="bold"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="50dp"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:id="@+id/email"
                    android:textColorHint="#c6c6c6"
                    android:hint="Enter your Email,Name"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_height="50dp"/>




                <TextView
                    android:layout_width="wrap_content"
                    android:text="Password"
                    android:textStyle="bold"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"/>


                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:id="@+id/password"
                    android:textColorHint="#c6c6c6"
                    android:hint="Enter your password"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_height="50dp"/>


                <CheckBox
                    android:layout_width="wrap_content"
                    android:text="Remember me"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp"
                    android:textSize="13dp"
                    android:layout_height="wrap_content"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="5dp"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:background="#5B17E4"
                        android:text="Log In"
                        android:textSize="14sp"
                        android:id="@+id/loginn"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:layout_height="43dp"/>
                </androidx.cardview.widget.CardView>





            </androidx.appcompat.widget.LinearLayoutCompat>



        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:text="Forgot your password"
            android:textColor="#8F8585"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:text="Don't have an account? "
                android:textColor="#8F8585"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="wrap_content"
                android:text="Register"
                android:textColor="#EDEDED"
                android:textStyle="bold"
                android:textSize="14dp"
                android:layout_height="wrap_content"/>


        </androidx.appcompat.widget.LinearLayoutCompat>




    </androidx.appcompat.widget.LinearLayoutCompat>







</androidx.constraintlayout.widget.ConstraintLayout>